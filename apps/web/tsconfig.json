{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@sheepgpt/core": [
        "../../packages/core/src"
      ],
      "@sheepgpt/core/*": [
        "../../packages/core/src/*"
      ],
      "@sheepgpt/ui": [
        "../../packages/ui/src"
      ],
      "@sheepgpt/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@sheepgpt/db": [
        "../../packages/db/src"
      ],
      "@sheepgpt/db/*": [
        "../../packages/db/src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/core/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
