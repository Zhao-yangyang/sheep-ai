{
  "name": "sheepgpt-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "sheepGPT AI SaaS - Modern Monorepo Architecture",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.10",
  "scripts": {
    "dev": "bun run --filter @sheepgpt/web dev",
    "build": "bun run -r build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc -b && cd apps/web && tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "clean": "bun run -r clean",
    "db:push": "cd packages/db && bun run db:push",
    "db:types": "cd packages/db && bun run db:types"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome lint --write",
      "biome format --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.4",
    "ai": "^6.0.11",
    "dotenv": "^17.2.3"
  }
}